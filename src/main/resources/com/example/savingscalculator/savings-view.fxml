<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.savingscalculator.SavingsController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="savingsHeader" alignment="TOP_CENTER" text="Welcome to Savings Calculator" />
   <Label fx:id="savingsHeader1" alignment="TOP_CENTER" layoutX="54.0" layoutY="30.0" text="Item you want to buy:" />
   <TextField fx:id="itemName" />
   <Label text="Item cost:" />
   <TextField fx:id="costOfItem" layoutX="30.0" layoutY="104.0" promptText="Type in an amount..." />
   <Label layoutX="98.0" layoutY="149.0" text="Number of months:" />
   <TextField fx:id="numberOfMonths" layoutX="30.0" layoutY="186.0" promptText="Type in an amount..." />
    <Button alignment="CENTER" onAction="#onCalculateButtonClick" prefHeight="25.0" prefWidth="107.0" text="Calculate" translateX="-70.0" translateY="15.0">
      <font>
         <Font name="Fira Code Regular" size="12.0" />
      </font>
      <opaqueInsets>
         <Insets />
      </opaqueInsets></Button>
   <Button alignment="CENTER" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#onResetButtonClick" prefHeight="25.0" prefWidth="110.0" text="Reset" translateX="70.0" translateY="-29.0">
      <font>
         <Font name="Fira Code Regular" size="12.0" />
      </font>
   </Button>
   <Label fx:id="calculatedText" alignment="CENTER" text="Please enter in values to calculate" wrapText="true">
      <font>
         <Font size="15.0" />
      </font>
   </Label>
</VBox>
